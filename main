import random

pokemon_char = {
    "Pikachu": 50,
    "Charmander": 55,
    "Bulbasaur": 60,
    "Squirtle": 58,
    "Jigglypuff": 45,
    "Eevee": 52,
    "Snorlax": 80,
    "Gengar": 70,
    "Machamp": 75,
    "Mewtwo": 90 
}

class Game:
    def choose_pokemon(self):
        print("Choose your Pokémon\n")
        count = 0
        for key in pokemon_char:
            count += 1
            print(f"[{count}] {key}")
        print()
        
        user_choice = int(input("Your Pokémon: "))
        pokemon_list = list(pokemon_char.keys())
        return pokemon_list[user_choice - 1]

    def computer_pokemon(self):
        pokemon_list = list(pokemon_char.keys())
        return random.choice(pokemon_list)
    
    def power_calculation(self):
        # Get Pokémon names and their power values
        user_pokemon_name = self.choose_pokemon()
        computer_pokemon_name = self.computer_pokemon()
        
        user_base_power = pokemon_char[user_pokemon_name]
        computer_base_power = pokemon_char[computer_pokemon_name]
        
        # Calculate power with random variation
        user_random_variation = random.randint(1, 100)
        computer_random_variation = random.randint(1, 100)
        
        user_final_power = user_base_power + user_random_variation
        computer_final_power = computer_base_power + computer_random_variation
        
        return (f"Your Pokémon: {user_pokemon_name} - Final Power: {user_final_power}\n"
                f"CPU Pokémon: {computer_pokemon_name} - Final Power: {computer_final_power}")

# Main program execution
game_instance = Game()


user_pokemon = game_instance.choose_pokemon()
print(f"You chose {user_pokemon}")

computer_pokemon = game_instance.computer_pokemon()
print(f"The computer chose {computer_pokemon}")

print(game_instance.power_calculation())



